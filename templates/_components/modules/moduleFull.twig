{% set breakOutBlocks = ["blockCta"] %}
{% for batch in children|batch(1) %}
  <div class="col-start-1 col-span-14 grid grid-cols-14 gap-x-4 ">
  {% for block in batch %}
    <div class="{% if block.type.handle not in breakOutBlocks %}col-span-12 col-start-2 {% else %}col-span-full{% endif %} moduleBlock {{ block.type.handle }}">
      {%- include [
        '_components/widgets/' ~ module.type.handle ~ '/' ~ block.type.handle,
        '_components/widgets/' ~ block.type.handle 
      ] -%}
    </div>
  {% endfor %}
  </div>
{% endfor %}