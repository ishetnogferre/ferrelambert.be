{% for batch in children|batch(3) %}
  <div class="col-start-2 col-span-12 grid grid-cols-12 gap-x-4">
    {% for block in batch %}
      {% set blockLoop = loop.index %}
      <div class="overflow-hidden col-span-12 lg:col-span-4 moduleBlock {{ block.type.handle }}">
        {%- include [
          '_components/widgets/' ~ module.type.handle ~ '/' ~ block.type.handle,
          '_components/widgets/' ~ block.type.handle 
        ] -%}
      </div>
    {% endfor %}
  </div>
{% endfor %}