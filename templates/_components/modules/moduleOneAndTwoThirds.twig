{% for batch in children|batch(2) %}
  <div class="col-start-2 col-span-12 grid grid-cols-12 gap-x-4">
    {% for block in batch %}
      {% set blockLoop = loop.index %}
      <div class="overflow-hidden {% if loop.first %}col-span-4{% else %}col-span-8{% endif %} moduleBlock {{ block.type.handle }}"
      {{ blockLoop % 2 == 0 ? 'blockEven' : 'blockOdd' }}
      {{ block.backgroundColor != 'transparent' and block.backgroundColor != null ? 'blockColored' }}">
        {%- include [
          '_components/widgets/' ~ module.type.handle ~ '/' ~ block.type.handle,
          '_components/widgets/' ~ block.type.handle 
        ] -%}
      </div>
    {% endfor %}
  </div>
{% endfor %}