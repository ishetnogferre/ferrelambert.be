{# @var craft \craft\web\twig\variables\CraftVariable #}
{#
 # Snippet Resolver Template
 # ----------------------
 #
 # This template gets loaded whenever a Panel View is requested by either the
 # Page Resolver or in a parent view.
 #
 # An `entry` variable expected in this template,
 # and optionally a `baseSegmentRoute` for special non-entry URIs.
-#}

{%- include [
    '_views/snippets/' ~ baseSegmentRoute ?? null,
    '_views/snippets/' ~ entry.section.handle ~ '/' ~ entry.type.handle,
    '_views/snippets/' ~ entry.section.handle ~ '/default',
    '_views/snippets/' ~ entry.section.handle,
    '_views/snippets/default',
] -%}
